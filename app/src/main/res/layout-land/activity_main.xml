<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:padding="16dp"
    android:baselineAligned="false">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <!-- Choose a Letter -->
            <TextView
                android:id="@+id/chooseALetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/prompt"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Letter Buttons -->
            <GridLayout
                android:id="@+id/letterButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alignmentMode="alignBounds"
                android:columnCount="6"
                android:rowCount="7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chooseALetter"
                app:layout_constraintVertical_bias="0.10">

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:onClick="letterClicked"
                    android:text="@string/A" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:onClick="letterClicked"
                    android:text="@string/B" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:onClick="letterClicked"
                    android:text="@string/C" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:onClick="letterClicked"
                    android:text="@string/D" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:onClick="letterClicked"
                    android:text="@string/E" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="0"
                    android:layout_column="5"
                    android:onClick="letterClicked"
                    android:text="@string/F" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:onClick="letterClicked"
                    android:text="@string/G" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:onClick="letterClicked"
                    android:text="@string/H" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:onClick="letterClicked"
                    android:text="@string/I" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:onClick="letterClicked"
                    android:text="@string/J" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:onClick="letterClicked"
                    android:text="@string/K" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="1"
                    android:layout_column="5"
                    android:onClick="letterClicked"
                    android:text="@string/L" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:onClick="letterClicked"
                    android:text="@string/M" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:onClick="letterClicked"
                    android:text="@string/N" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:onClick="letterClicked"
                    android:text="@string/O" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:onClick="letterClicked"
                    android:text="@string/P" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:onClick="letterClicked"
                    android:text="@string/Q" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="2"
                    android:layout_column="5"
                    android:onClick="letterClicked"
                    android:text="@string/R" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:onClick="letterClicked"
                    android:text="@string/S" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:onClick="letterClicked"
                    android:text="@string/T" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:onClick="letterClicked"
                    android:text="@string/U" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="3"
                    android:layout_column="3"
                    android:onClick="letterClicked"
                    android:text="@string/V" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="3"
                    android:layout_column="4"
                    android:onClick="letterClicked"
                    android:text="@string/W" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="3"
                    android:layout_column="5"
                    android:onClick="letterClicked"
                    android:text="@string/X" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:onClick="letterClicked"
                    android:text="@string/Y" />

                <Button
                    style="@style/LetterButtonLand"
                    android:layout_row="4"
                    android:layout_column="3"
                    android:onClick="letterClicked"
                    android:text="@string/Z" />

            </GridLayout>

            <Button
                android:id="@+id/hintButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="255dp"
                android:text="@string/hint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chooseALetter" />

            <TextView
                android:id="@+id/hintContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:text="@string/empty"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/hintButton"
                app:layout_constraintTop_toBottomOf="@+id/chooseALetter" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:id="@+id/newGameButton"
                android:text="@string/new_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/newGameButtonLand"
                />

            <ImageView
                android:id="@+id/hangmanDisplay"
                android:layout_width="400dp"
                android:layout_height="230dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/hangman_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Word To Guess -->
            <TextView
                android:id="@+id/wordToGuess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/blank"
                android:textSize="55sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hangmanDisplay" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</LinearLayout>
