<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/hangmanDisplay"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:src=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Word To Guess -->
    <TextView
        android:id="@+id/wordToGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_ _ _ _ _"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@+id/hangmanDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.0"/>

    <!-- Choose a Letter -->
    <TextView
        android:id="@+id/chooseALetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE A LETTER"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/wordToGuess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.0"/>

    <!-- Letter Buttons -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:alignmentMode="alignBounds"
        android:columnCount="6"
        android:rowCount="7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseALetter">

        <Button
            style="@style/LetterButton"
            android:layout_row="0"
            android:layout_column="0"
            android:text="A" />

        <Button
            style="@style/LetterButton"
            android:layout_row="0"
            android:layout_column="1"
            android:text="B" />

        <Button
            style="@style/LetterButton"
            android:layout_row="0"
            android:layout_column="2"
            android:text="C" />

        <Button
            style="@style/LetterButton"
            android:layout_row="0"
            android:layout_column="3"
            android:text="D" />

        <Button
            style="@style/LetterButton"
            android:layout_row="0"
            android:layout_column="4"
            android:text="E" />

        <Button
            style="@style/LetterButton"
            android:layout_row="0"
            android:layout_column="5"
            android:text="F" />

        <Button
            style="@style/LetterButton"
            android:layout_row="1"
            android:layout_column="0"
            android:text="G" />

        <Button
            style="@style/LetterButton"
            android:layout_row="1"
            android:layout_column="1"
            android:text="H" />

        <Button
            style="@style/LetterButton"
            android:layout_row="1"
            android:layout_column="2"
            android:text="I" />

        <Button
            style="@style/LetterButton"
            android:layout_row="1"
            android:layout_column="3"
            android:text="J" />

        <Button
            style="@style/LetterButton"
            android:layout_row="1"
            android:layout_column="4"
            android:text="K" />

        <Button
            style="@style/LetterButton"
            android:layout_row="1"
            android:layout_column="5"
            android:text="L" />

        <Button
            style="@style/LetterButton"
            android:layout_row="2"
            android:layout_column="0"
            android:text="M" />

        <Button
            style="@style/LetterButton"
            android:layout_row="2"
            android:layout_column="1"
            android:text="N" />

        <Button
            style="@style/LetterButton"
            android:layout_row="2"
            android:layout_column="2"
            android:text="O" />

        <Button
            style="@style/LetterButton"
            android:layout_row="2"
            android:layout_column="3"
            android:text="P" />

        <Button
            style="@style/LetterButton"
            android:layout_row="2"
            android:layout_column="4"
            android:text="Q" />

        <Button
            style="@style/LetterButton"
            android:layout_row="2"
            android:layout_column="5"
            android:text="R" />

        <Button
            style="@style/LetterButton"
            android:layout_row="3"
            android:layout_column="0"
            android:text="S" />

        <Button
            style="@style/LetterButton"
            android:layout_row="3"
            android:layout_column="1"
            android:text="T" />

        <Button
            style="@style/LetterButton"
            android:layout_row="3"
            android:layout_column="2"
            android:text="U" />

        <Button
            style="@style/LetterButton"
            android:layout_row="3"
            android:layout_column="3"
            android:text="V" />

        <Button
            style="@style/LetterButton"
            android:layout_row="3"
            android:layout_column="4"
            android:text="W" />

        <Button
            style="@style/LetterButton"
            android:layout_row="3"
            android:layout_column="5"
            android:text="X" />

        <Button
            style="@style/LetterButton"
            android:layout_row="4"
            android:layout_column="2"
            android:text="Y" />

        <Button
            style="@style/LetterButton"
            android:layout_row="4"
            android:layout_column="3"
            android:text="Z" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
